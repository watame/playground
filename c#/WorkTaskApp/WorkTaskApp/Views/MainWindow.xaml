<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="WorkTaskApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="作業管理アプリ" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
            <TextBlock Text="作業内容" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="作業日" Margin="5" VerticalAlignment="Center"/>
                <xctk:DateTimePicker x:Name="WorkDate" Value="{Binding DateWeather.WorkDate}" Margin="5" TimePickerVisibility="Collapsed" Format="LongDate" ShowButtonSpinner="False"/>
                <TextBlock Text="天気" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding DateWeather.Weather}" Margin="5" VerticalAlignment="Center"/>
            </StackPanel>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="作業詳細" Margin="5" Grid.Column="0"/>
                <TextBox Grid.Column="1" Text="{Binding WorkContent.Content}" Margin="5" VerticalAlignment="Center"/>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="作業開始" Margin="5"/>
                    <xctk:TimePicker x:Name="StartWorkTime" Value="{Binding WorkContent.StartWorkTime}" Margin="5" FormatString="HH:mm" Format="Custom" TimeInterval="0:30:0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="作業終了" Margin="5"/>
                    <xctk:TimePicker x:Name="EndWorkTime" Value="{Binding WorkContent.EndWorkTime}" Margin="5" FormatString="HH:mm" Format="Custom" TimeInterval="0:30:0" />
                </StackPanel>
            </StackPanel>
            <Button x:Name="Save" Margin="10,5,5,5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">作業保存</Button>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" x:Name="Pesticide" Margin="5">
            <TextBlock Text="農薬散布" Margin="5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="DescriptionOfPestcide" Text="{Binding PesticideContent.PestsideName}" Margin="10,5,5,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <xctk:DoubleUpDown x:Name="Used" Value="{Binding PesticideContent.Used}" Margin="5" />
                    <TextBlock x:Name="Unit" Text="{Binding PesticideContent.Unit}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Button Content="農薬設定" Margin="10, 5, 5, 5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" x:Name="Log" Margin="20">
            <TextBlock>作業登録ログ</TextBlock>
        </StackPanel>
    </Grid>
</Window>
